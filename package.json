{
	"name": "@utily/library-template",
	"version": "0.0.40",
	"description": "Template library for Typescript.",
	"author": "Utily Contributors",
	"license": "MIT",
	"repository": "https://github.com/utily/library-template",
	"bugs": {
		"url": "https://github.com/utily/library-template/issues"
	},
	"homepage": "https://github.com/utily",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"type": "module",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": [
				"ts-jest",
				{
					"tsconfig": "./tsconfig.test.json"
				}
			]
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|isly|flagly|gracely|cloudly-http|cloudly-router|cloudly-rest|cloudly-formdata|@pax2pay|@userwidgets)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		]
	},
	"scripts": {
		"lint": "eslint --max-warnings=0 '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest --maxWorkers=2",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage"
	},
	"devDependencies": {
		"@pax2pay/model-banking": "0.1.299",
		"@types/jest": "^29.5.12",
		"@typescript-eslint/eslint-plugin": "7.8.0",
		"@typescript-eslint/parser": "7.8.0",
		"@userwidgets/model": "0.8.28",
		"dotenv": "^16.4.5",
		"eslint": "^8.56.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20231004",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"isomorphic-fetch": "3.0.0",
		"jest": "^29.7.0",
		"prettierx": "github:utily/prettierx#utily-20231004",
		"rimraf": "^5.0.7",
		"ts-jest": "^29.1.2",
		"typescript": "^5.4.5"
	},
	"dependencies": {
		"gracely": "^2.0.8",
		"cloudly-http": "0.2.0-alpha.17",
		"isoly": "^2.3.10"
	},
	"overrides": {
		"semver": "7.5.3",
		"optionator": "0.9.3"
	}
}
